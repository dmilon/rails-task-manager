<div class="container">
  <div class="row">
    <div class="col">
    </div>
    <div class="col-8">
      <h1>My tasks</h1>
      <% @tasks.each do |task| %>
        <% completed = task.completed ? "fa-check-square" : "fa-square" %>
        <p>
          <i class="far <%= completed %>"></i>
          <%= link_to task.title, task_path(task)%> Â·
          <%= link_to(task_path(task), method: :delete, data: {confirm: "Are you sure?"}) do %>
            <i class="far fa-trash-alt"></i>
          <% end %>
        </p>
      <% end %>
      <hr>
      <i class="fas fa-plus"></i><%= link_to "Add a new task", new_task_path %>
    </div>
    <div class="col">
    </div>
  </div>
</div>
