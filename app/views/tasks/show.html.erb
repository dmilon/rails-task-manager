<div class="container">
  <div class="row">
    <div class="col">
    </div>
    <div class="col-8">
      <div class="flexbox">
        <h1><%= @task.title %></h1>
        <button class="btn btn-light"><%= link_to "Edit this task", edit_task_path %></button>
      </div>
      <p class="details"><%= @task.details %></p>
      <% if @task.completed %>
        <% checkbox = "fa-check-square" %>
        <% comment = "This task is completed" %>
      <% else %>
        <% checkbox = "fa-square" %>
        <% comment =  "This task is not completed yet" %>
      <% end %>
      <p><i class="far <%= checkbox %>"></i><%= comment %></p>
      <i class="fas fa-undo-alt"></i><%= link_to "Back to list", tasks_path %>
    </div>
    <div class="col">
    </div>
  </div>
</div>
